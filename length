import java.lang.*;
import java.util.*;
public class length{
	public static void main(String[] x){
	Scanner sc= new Scanner (System.in);
	System.out.println("Enter the sentence");
	String s=sc.nextLine();
	int count=1;
	int i;
	for(i=0;i<s.length();i++)
	{
		if((s.charAt(i)==' ')&& (s.charAt(i+1)!=' '))
			{
				count++;
			}
	}
	System.out.println(count);
	}

}
